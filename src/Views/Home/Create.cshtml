@model CreateFeedRequest
@{
    ViewData["Title"] = "Create Feed";
}

<h3>Create Feed</h3>
<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Url" class="form-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy me-1"></i>Create</button>
    <button type="reset" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise me-1"></i>Reset</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}